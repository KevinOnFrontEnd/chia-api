{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
        {
          "type": "pickString",
          "id": "spec-file",
          "description": "Which spec do you want to debug?",
          "options": [
            "crawler",
            "daemon",
            "farmer",
            "full_node",
            "harvester",
            "wallet"
          ],
          "default": "wallet"
        }
    ],
    "tasks": [
        {
            "label": "debug",
            "type": "shell",
            "command": "./build1.ps1",
            "args": [
                "-file",
                "${input:spec-file}.yaml"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "clean",
                "prepare"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "./build-all.ps1",
            "args": [],
            "problemMatcher": [],
            "dependsOn": [
                "clean",
                "prepare"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "type": "shell",
            "command": "./publish.ps1",
            "args": [],
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ],
        },
        {
            "label": "test",
            "type": "shell",
            "command": "npx",
            "args": ["@redocly/openapi-cli", "lint", "src/*.yaml", "--skip-rule", "operation-4xx-response", "--extends", "recommended"],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "./clean.ps1",
            "args": [
                "-folder",
                "${workspaceRoot}/build"
            ],
            "problemMatcher": []
        },
        {
            "label": "prepare",
            "type": "shell",
            "command": "mkdir ${workspaceRoot}/build/tmp; mkdir ${workspaceRoot}/build/site",
            "problemMatcher": []
        }
    ]
}